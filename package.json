{
  "name": "tedx",
  "version": "0.0.3",
  "fullName": "TEDx template",
  "description": "Create TEDx apps for your TEDx event using this template. The template is designed to fit TEDx brands and colors.",
  "keywords": [
     "tedx",
     "conference"
   ],
  "joshfire": {
    "images": {
      "small":"http://i.imgur.com/XF5iy.png",
      "big":"http://i.imgur.com/xU1Nn.png"
    },
    "devices": [
      {
        "devices": "desktop",
        "startfile": "app/index.desktop.html",
        "images": "marketing/image-small.png"
      },
      {
        "devices": "phone",
        "startfile": "app/index.phone.html",
        "images":"marketing/image-small.png",
        "screenshots":["marketing/screenshot-phone.png"]
      },
      {
        "devices": "tablet",
        "startfile": "app/index.tablet.html",
        "images":"marketing/image-small.png",
        "screenshots":["marketing/screenshot-tablet-portrait.png"]    
      },
      {
        "devices": "tv",
        "startfile": "app/index.tv.html",
        "images":"marketing/image-small.png",
        "screenshots":["marketing/screenshot-tv.jpg"]
      },
      {
        "devices": "*",
        "startfile": "app/index.html"
      }
    ],
    "datasources": {
      "main": {
        "title": "Main tabs",
        "description": "Add up to 6 tabs in your application",
        "multiple":true
      }
    },
    "options": {
      "schema": {
        "abouthtml": {
          "type": "string"
        }
      },
    "form": [
      "datasources.main",
      {
        "key": "abouthtml",
        "type": "textarea"
      }
    ]
    }
  }
}