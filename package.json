{
  "name": "tedx",
  "version": "0.0.3",
  "fullName": "TEDx template",
  "description": "Create TEDx apps for your TEDx event using this template. The template is designed to fit TEDx brands and colors.",
  "keywords": [
     "tedx",
     "conference"
   ],
  "joshfire": {
    "images": {
      "small":"marketing/image-small.png",
      "big":"marketing/image-big.png"
    },
    "devices": [
      {
        "devices": "phone",
        "startfile": "app/index.phone.html",
        "images":"marketing/image-small.png",
        "screenshots":["marketing/screenshot-phone-1.png", "marketing/screenshot-phone-2.png"]
      },
      {
        "devices": "tablet",
        "startfile": "app/index.tablet.html",
        "images":"marketing/image-small.png",
        "screenshots":["marketing/screenshot-tablet-landscape-1.jpg", "marketing/screenshot-tablet-landscape-2.jpg"]
      }
    ],
    "datasources": {
      "main": {
        "title": "Main tabs",
        "description": "Add up to 6 tabs in your application",
        "multiple":true
      }
    },
    "options": {
      "schema": {
        "abouthtml": {
          "type": "string"
        }
      },
    "form": [
      "datasources.main",
      {
        "key": "abouthtml",
        "type": "textarea"
      }
    ]
    }
  }
}